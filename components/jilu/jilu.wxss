/**index.wxss**/
.calendar-root{
  width:100%;
  height:100%;
  font-family: "simhei";
}
.calendar-title{
  padding:30rpx 30rpx;
  /*text-align: center;*/
  line-height:1.5;
}
.year{
  color:#7D26CD;
  display: block;
  font-size: 48rpx;
}
.semester{
  color:cadetblue;
  font-size: 40rpx;
}
.changestyle{
  width:35%;
  float:right;
  height:60rpx;
  line-height: 60rpx;
  font-size:30rpx;
  color:cadetblue;
  background-color: #fff;
  border: 2rpx solid cadetblue;
}
.onehidden{
  display: none;
}
.calendar-navbar{
  margin-top:30rpx;
  font-family: simhei;
  display: flex;
  justify-content: center;
  align-items:center;
  background-color:whitesmoke;
  height:83rpx;
}
.calendar-navbar-button{
  flex:1;
  width:100rpx;
  text-align: center;
  font-size:30rpx;
}
.calendar-navbar-date{
  flex-grow:1;
  width:150rpx;
  text-align: center;
}
.calendar-head{
  display: flex;
  justify-content: center;
  align-items:center;
  height:100rpx;
  color:black;
}
.calendar-head view{
  flex:1;
  text-align: center;
}
.calendar-body-rows{
  display: flex;
  align-items:center;
  height:128rpx;
}
.calendar-body-cols{
  display: flex;
  flex:1;
  align-items:center;
  height:100%;
}
.calendar-body-item{
  display: block;
  text-align: center;
  align-items:center;
  width:100%;
  height:100%;
}
.calendar-body-day{
  margin:0 20rpx;
  text-align: center;
  width:66%;
  height:54%;
}
.calendar-body-day view{
  width:100%;
  padding:14rpx 0;
}
.infoIsShow{
  border: white;
  border-radius: 50%;
  color:cadetblue;
}
.isToday{
  background-color: cadetblue;
  border-radius: 50%;
  color:#fff;
}
.calendar-body-dayex{
  margin:4rpx;
  font-size:22rpx;
  text-align: center;
  color:cadetblue;
}
.twohidden{
  display:none;
  margin-top:30rpx;
}
.months{
  margin:0 25rpx;
  position: relative;
}
.monthName{
  margin:30rpx 15rpx;
  color:#7D26CD;
  border-left:8rpx solid #7D26CD;
}
.week{
  display: flex;
  margin-top:10rpx;
  margin-left:100rpx;
}
.weekName{
  justify-content:space-around;
  align-items:center;
  height:77rpx;
  color:#7D26CD;
  font-size:26rpx;
  flex:1;
  text-align: center;
}
.month-body{
  margin-left:100rpx;
}
.month-body-y{
  display: flex;
  /*height:96rpx;*/
}
.month-body-x{
  flex:1;
  text-align: center;
  height:96rpx;
}
.month-body-item{
  display: block;
  text-align: center;
  align-items:center;
  width:100%;
  height:100%;
}
.month-body-day{
  margin:0 auto;
  text-align: center;
  vertical-align: center;
  width:66%;
}
.month-body-day view{
  width:100%;
  text-align: center;
}
.infoIsShow2{
  color:cadetblue;
}

.month-body-dayex{
  margin:4rpx;
  padding:0 4rpx;
  font-size:20rpx;
  text-align: center;
  color:cadetblue;
}
.isEnd{
  color:#FFB90F;
}

.weekNum{
  position: absolute;
  left:20rpx;
  margin-top:6rpx;
  font-size:28rpx;
  color:#7D26CD;
}
.numNotShow{
  display: none;
}
.febNotShow{
  display: none;
}
.febWNotShow{
  display: none;
}

.graphCanvas {
  width: 750rpx;
  height: 400px;
}




/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  

/*content*/  
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  align-items:center;
  height: 500rpx;
  z-index: 1001;  
  background: white;
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 10px; 
}  
  
.drawer_title{  
  padding:15px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  color: cadetblue;
}  
   
.btn_ok{  
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: cadetblue;  
}  
  
.top{  
    padding-top:8px;  
}  
.bottom {  
    padding-bottom:8px;  
}  
.title {  
    height: 30px;  
    line-height: 30px;  
    width: 160rpx;  
    text-align: center;  
    display: inline-block;  
    font: 300 28rpx/30px "microsoft yahei";  
}  
  
.input_base {  
    border: 2rpx solid #ccc;  
    padding-left: 10rpx;  
    margin-right: 50rpx;  
}  
.input_h30{  
    height: 30px;  
    line-height: 30px;  
}  

.input_view{  
    font: 12px "microsoft yahei";  
    background: #fff;  
    color:#000;  
    line-height: 30px;  
}  
  
input {  
    font: 12px "microsoft yahei";  
    background: #fff;  
    color:#000 ; 
}  
radio{  
    margin-right: 20px;  
}  
.grid { display: -webkit-box; display: box; }  
.col-0 {-webkit-box-flex:0;color:cadetblue}  
.col-1 {-webkit-box-flex:1;border-color: cadetblue;border-radius: 5px}  
.fl { float: left;}  
.fr { float: right;}  
